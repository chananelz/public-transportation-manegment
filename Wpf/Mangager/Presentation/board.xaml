<Window x:Class="Wpf.Mangager.Presentation.board"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf.Mangager.Presentation"
        mc:Ignorable="d"
        Title="board" Height="450" Width="800">
    <Grid Name="FirstPage">
        <Grid.Effect>
            <DropShadowEffect BlurRadius="30"
                              ShadowDepth="2"
                              Direction="-90"
                              Color="Gray"/>
        </Grid.Effect>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="60*"/>
      
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.Background>
            <ImageBrush ImageSource="myImages/green_background.png"/>
        </Grid.Background>
      
        
        <Label Content="Lines" HorizontalAlignment="Center"  VerticalAlignment="Center"    Grid.Row="0" Grid.Column="0" Foreground ="Red" FontSize="18" FontFamily="Arial Black"/>




        <Label Content="Number"                               HorizontalAlignment="Center"   VerticalAlignment="Center"  Grid.Row="0" Grid.Column="1" Foreground ="Red" FontSize="18" FontFamily="Arial Black" />
        <Label Content="Last Stop"                            HorizontalAlignment="Center"   VerticalAlignment="Center"  Grid.Row="0" Grid.Column="2" Foreground ="Red" FontSize="18" FontFamily="Arial Black" />
        <Label Content="Arrival"                              HorizontalAlignment="Center"   VerticalAlignment="Center"  Grid.Row="0" Grid.Column="3" Foreground ="Red" FontSize="18" FontFamily="Arial Black" />






        <Grid Name="staticPanel" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="1" >
           
            <ListBox HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" ItemsSource="{Binding}" Background="YellowGreen" x:Name="LineListS"  FlowDirection="LeftToRight"  >
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Number}"/>
                            <TextBlock Text="    "/>
                            <TextBlock x:Name="lastStop" Text="{Binding LastStop}"/>

                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>


        </Grid>

        <Grid Name="Information"   Grid.Row="1"  Grid.Column="1" Grid.ColumnSpan="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
            </Grid>
           

        </Grid>

        <Grid Name="BoardList" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4" >
            <ListBox Name="boardList"  Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" ItemsSource="{Binding}" BorderThickness="0"  Background="Transparent">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0"      Content = "{Binding Number}"  />
                            <Label Grid.Column="1"      Content = "{Binding LastStop}" />
                            <Label Grid.Column="2"      Content = "{Binding Arrival}" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>



    </Grid>
</Window>
